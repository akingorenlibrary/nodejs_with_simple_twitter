            <input type="hidden" value="{{user}}" id="user">
            <hr>
            <div id="chat-window" style="margin-left:5px">
                {{#each result}} 
                    {{#if kalin}}
                   <b> {{sender}} : {{message}}</b><br>
                    {{else}}
                    {{sender}} : {{message}}<br>
                    {{/if}}
                {{/each}}
                <div id="output"></div>
            </div>
            <hr>
            <div class="input-group mb-3" style="padding:5px">
                <input type="text" class="form-control" id="message" placeholder="Mesaj yaz">
