<div class="container">
    {{> _errors}}
</div>

<div class="container" style="margin-top:20px">
    <div class="card">
        <div class="card-header">
            Email Change
        </div>
        <div class="card-body">
            <div class="row" >
                <div class="col-md-12">
                    <form action="/{{user}}/email-change/" method="POST">

                        <label for="exampleInputEmail1">Mevcut Şifreniz</label>
                        <div class="input-group mb-3">
                            <input type="password" class="form-control password" name="mevcutSifre">
                            <div class="input-group-append">
                                <span class="input-group-text" id="sifre"></span>
                            </div>
                        </div>

                       <div class="form-group">
                            <label for="exampleInputEmail1">Yeni Email</label>
                            <input type="email" class="form-control" name="yeniEmail">
                        </div>
                        <button  type="submit" name="buttonBlock" class="btn btn-primary">Kaydet</button>
                        <br><br><hr>
                        <p>• Mevcut şifreniz doğrulama için gereklidir</p>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
