<div class="container" style="margin-top:20px">
    {{#each post}}
    <div class="card">
        <div class="card-header">
            Post
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    {{write}}
                </div>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card">
        <div class="card-header">
            Post
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <p class="empty">No content</p>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
    <br>
    {{#each post}}
    <div class="card">
        <div class="card-header">
            Postu Sil
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <form action="/{{username}}/post-delete/{{id}}" method="POST">
                        <b>Bu postu silmek istediğinizden emin misiniz?</b>
                        <br><br>
                        <button type="submit" name="buttonBlock" class="btn btn-danger">Evet</button>
                        <a role="button" href="/{{username}}" class="btn btn-primary">Hayır</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>