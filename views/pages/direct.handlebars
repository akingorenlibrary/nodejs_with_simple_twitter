<div class="container" style="margin-top:25px" >
    <div class="card">
        <div class="row" style="text-align:center;padding:10px">
            <div class="col-md-12">
                <a type="button" href="/direct/new" class="btn btn-secondary">Yeni Mesaj</a>
            </div>
        </div>

        {{#if sohbetSayisi}}
        <hr>
        <div class="row" style="text-align:center;padding:5px">
            <div class="col-md-12">
                <h5>Sohbetlerim ({{sohbetSayisi}})</h5>
            </div>
        </div>
        {{/if}}

        {{#each sohbetKisileri}}
        <a href="/direct/t/{{receiver}}" style="color:black">
        <div class="card">
            <div class="card-body">
                <div class="row" style="padding:5px">
                    <div class="col-md-12">
                        {{#if receiver_image_photo}}
                        <img src="/user-images/{{receiver}}/{{receiver_image_photo}}" width=60 height=60 class="rounded float-start" alt="..."> &nbsp; @{{receiver}}
                        {{else}}
                        <img src="/images/user.png" width=60 height=60  class="rounded float-start" alt="..."> &nbsp; @{{receiver}}
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
        </a>
        <a type="button" id="buttonBlock" href="/direct/delete/{{receiver}}" class="btn btn-danger">Sil</a>
        <br>
        <br>
        {{/each}}
    </div>
</div>